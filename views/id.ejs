<p>Todo by ID: </p>

<ul>
  <% fulltodo %>
    <li>ID: <%=fulltodo._id %></li>
    Task: <%=fulltodo.name %>
    <br>Description: <%= fulltodo.description %>
    <br>Completed: <%= fulltodo.completed %>
  <br><% %>
</ul>

<p>Update This Todo Item:</p>

<form method="POST" action="?_method=PUT">

  <div class="input-group">
    <input type="text" class="form-control" name="name" placeholder="<%=fulltodo.name %>" aria-describedby="basic-addon2">
  </div>

  <div class="input-group">
    <input type="text" class="form-control" name="description" placeholder="<%= fulltodo.description %>" aria-describedby="basic-addon2">
  </div>

  <div class="input-group">
    <input type="text" class="form-control" name="completed" placeholder="<%= fulltodo.completed %>" aria-describedby="basic-addon2">
  </div>

  <button type="submit">Edit Todo</button>
</form>

<br>

<form method="POST" action="?_method=DELETE">
  <button type="submit">Delete Todo</button>
</form>


